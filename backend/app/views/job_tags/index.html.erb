<p id="notice"><%= notice %></p>

<h1>Listing Job Tags</h1>

<table>
  <thead>
    <tr>
      <th>Job</th>
      <th>Tag</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @job_tags.each do |job_tag| %>
      <tr>
        <td><%= job_tag.job_id %></td>
        <td><%= job_tag.tag_id %></td>
        <td><%= link_to 'Show', job_tag %></td>
        <td><%= link_to 'Edit', edit_job_tag_path(job_tag) %></td>
        <td><%= link_to 'Destroy', job_tag, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

